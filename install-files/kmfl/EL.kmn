c EL - Ethiopian Latin
store(&VERSION) '7.0'
store(&TARGETS) 'windows macosx linux'
store(&KEYBOARDVERSION) '1.0.1'
store(&BITMAP) 'EL.png'
store(&NAME) 'EL - Ethiopian Latin'
store(&MnemonicLayout) "1" c This keyboard uses a mnemonic layout.

begin Unicode > use(main)

group(main) using keys

c ------------------------------------------------------------------------------
c arrays
c ------------------------------------------------------------------------------
store(plainvowels) "aeiouAEIOU"

store(acutevowels) U+00E1 U+00E9 U+00ED U+00F3 U+00FA U+00C1 U+00C9 U+00CD U+00D3 U+00DA

store(gravevowels) U+00E0 U+00E8 U+00EC U+00F2 U+00F9 U+00C0 U+00C8 U+00CC U+00D2 U+00D9

store(circumflexvowels) U+00E2 U+00EA U+00EE U+00F4 U+00FB U+00C2 U+00CA U+00CE U+00D4 U+00DB

store(caronvowels) U+01CE U+011B U+01D0 U+01D2 U+01D4 U+01CD U+011A U+01CF U+01D1 U+01D3

c store(tildevowels) U+00E3 U+1EBD U+0129 U+00F5 U+0169 U+00C3 U+1EBC U+0128 U+00D5 U+0168

c ------------------------------------------------------------------------------
c punctuation
c ------------------------------------------------------------------------------
       + "'"    > U+2018 c ‘
U+2018 + "'"    > U+2019 c ’
U+2019 + "'"    > U+2018 c ‘ (rota)

       + U+0022 > U+201C c “
U+201C + U+0022 > U+201D c ”
U+201D + U+0022 > U+201C c “ (rota)

"<"  + "'"    > U+2039 c ‹
">"  + "'"    > U+203A c ›
"<"  + '"'    > U+00AB c «
">"  + '"'    > U+00BB c »

";"    + "'"    > U+02BC c ʼ

c ------------------------------------------------------------------------------
c special vowels (no diacritics)
c ------------------------------------------------------------------------------
";" + "e" > U+025B c ɛ
"e" + "<" > U+025B c ɛ
";" + "E" > U+0190 c Ɛ
"E" + "<" > U+0190 c Ɛ

":" + "e" > U+0259 c ə
":" + "E" > U+018F c Ə

";" + "i" > U+0268 c ɨ
"i" + "<" > U+0268 c ɨ
"i" + "=" > U+0268 c ɨ
";" + "I" > U+0197 c Ɨ
"I" + "<" > U+0190 c Ɨ
"I" + "=" > U+0190 c Ɨ

";" + "o" > U+0254 c ɔ
"o" + "<" > U+0254 c ɔ
";" + "O" > U+0186 c Ɔ
"O" + "<" > U+0186 c Ɔ

";" + "u" > U+0289 c ʉ
"u" + "<" > U+0289 c ʉ
"u" + "=" > U+0289 c ʉ
";" + "U" > U+0244 c Ʉ
"U" + "<" > U+0244 c Ʉ
"U" + "=" > U+0244 c Ʉ

c ------------------------------------------------------------------------------
c special consonants (no diacritics)
c ------------------------------------------------------------------------------
";" + "b" > U+0253 c ɓ
"b" + "<" > U+0253 c ɓ
";" + "B" > U+0181 c Ɓ
"B" + "<" > U+0181 c Ɓ

";" + "c" > U+00E7 c ç
"c" + "<" > U+00E7 c ç
";" + "C" > U+00C7 c Ç
"C" + "<" > U+00C7 c Ç

";" + "d" > U+0257 c ɗ
"d" + "<" > U+0257 c ɗ
";" + "D" > U+018A c Ɗ
"D" + "<" > U+018A c Ɗ

";" + "g" > U+0260 c ɠ
"g" + "<" > U+0260 c ɠ
";" + "G" > U+0193 c Ɠ
"G" + "<" > U+0193 c Ɠ

";" + "h" > U+0127 c ħ
";" + "H" > U+0128 c Ħ

";" + "n" > U+014B c ŋ
"n" + "<" > U+014B c ŋ
";" + "N" > U+014A c Ŋ
"N" + "<" > U+014A c Ŋ

":" + "n" > U+0272 c ɲ
":" + "N" > U+019D c Ɲ

";" + "s" > U+0283 c ʃ
"s" + "<" > U+0283 c ʃ
";" + "S" > U+0286 c ʆ
"S" + "<" > U+0286 c ʆ

";" + "x" > U+0295 c ʕ

c ------------------------------------------------------------------------------
c acute characters
c ------------------------------------------------------------------------------
any(plainvowels) + "1" > index(acutevowels, 1)

"b"    + "1" > U+0062 U+0301 c b́
"B"    + "1" > U+0042 U+0301 c B́

U+025B + "1" > U+025B U+0301 c ɛ́
U+0190 + "1" > U+0190 U+0301 c Ɛ́

"m"    + "1" > U+1E3F        c ḿ
"M"    + "1" > U+1E3E        c Ḿ

"n"    + "1" > U+0144        c ń
"N"    + "1" > U+0143        c Ń

U+014B + "1" > U+014B U+0301 c ŋ́
U+014A + "1" > U+014A U+0301 c Ŋ́

U+0254 + "1" > U+0254 U+0301 c ɔ́
U+0186 + "1" > U+0186 U+0301 c Ɔ́

"t"    + "1" > U+0074 U+0301 c t́
"T"    + "1" > U+0054 U+0301 c T́

c ------------------------------------------------------------------------------
c grave characters
c ------------------------------------------------------------------------------
any(plainvowels) + "2" > index(gravevowels, 1)

U+025B + "2" > U+025B U+0300 c ɛ̀
U+0190 + "2" > U+0190 U+0300 c Ɛ̀

U+0254 + "2" > U+0254 U+0300 c ɔ̀
U+0186 + "2" > U+0186 U+0300 c Ɔ̀

c ------------------------------------------------------------------------------
c circumflex characters
c ------------------------------------------------------------------------------
any(plainvowels) + "3" > index(circumflexvowels, 1)

c ------------------------------------------------------------------------------
c caron characters
c ------------------------------------------------------------------------------
any(plainvowels) + "4" > index(caronvowels, 1)

c ------------------------------------------------------------------------------
c tilde characters
c ------------------------------------------------------------------------------
"n" + "5" > U+00F1 c ñ
"N" + "5" > U+00D1 c Ñ

c ------------------------------------------------------------------------------
c combining comma characters
c ------------------------------------------------------------------------------
"c" + "6" > U+0063 U+0315 c c̕
"C" + "6" > U+0043 U+0315 c C̕

"k" + "6" > U+006B U+0315 c k̕
"K" + "6" > U+004B U+0315 c K̕

"s" + "6" > U+0073 U+0315 c s̕
"S" + "6" > U+0053 U+0315 c S̕

"t" + "6" > U+0074 U+0315 c t̕
"T" + "6" > U+0054 U+0315 c T̕

c ------------------------------------------------------------------------------
c double acute characters
c ------------------------------------------------------------------------------
"a" + "7" > U+00E0 U+030B c à̋
"A" + "7" > U+00C0 U+030B c À̋

c ------------------------------------------------------------------------------
c macron characters
c ------------------------------------------------------------------------------
"m" + "8" > U+006D U+0304 c m̄
"M" + "8" > U+004D U+0304 c M̄

"n" + "8" > U+006E U+0304 c n̄
"N" + "8" > U+004E U+0304 c N̄
